# ==============================================
# SHOPPY SENSAY - ENVIRONMENT CONFIGURATION
# ==============================================

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/shoppys_db"

# Sensay API Configuration
SENSAY_API_KEY="your_sensay_api_key_here"
SENSAY_API_URL="https://api.sensay.io"

# Authentication
JWT_SECRET="your_jwt_secret_here"

# Shopify Configuration
SHOPIFY_STORE_DOMAIN="your-store.myshopify.com"
SHOPIFY_ACCESS_TOKEN="your_shopify_access_token_here"

# Environment
NODE_ENV="development"

